[hub]
  protocol = https
[github]
  user = stve
[user]
  name = Steve Agalloco
  email = steve.agalloco@gmail.com
[credential]
  helper = osxkeychain
[alias]
  st = status
  co = checkout

  promote = !$ZSH/bin/git-promote
  wtf     = !$ZSH/bin/git-wtf
  rank-contributors = !$ZSH/bin/git-rank-contributors
  count   = !git shortlog -sn

  # Create new branch in the form (stve/branchname)
  new = !sh -c 'git checkout -b $(git config --get github.user)/$0'

  # Push a new branch and track
  pushup = !sh -c 'git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)'

  # Initialize repository with an empty commit
  root = !git init && git commit -m "root" --allow-empty

  # Commit without a file (message-only commit)
  msg = commit --allow-empty -m
  commend = commit --amend --no-edit
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = vim
[apply]
  whitespace = nowarn
[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[help]
  autocorrect = 1
[push]
  # See `git help config` (search for push.default)
  # for more information on different options of the below setting.
  #
  # Setting to git 2.0 default to suppress warning message
  default = simple
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[pull]
  rebase = true
[init]
  defaultBranch = main
[include]
  path = ~/.gitconfig.local
